<?xml version="1.0" encoding="utf-8"?>
<com.arise.demo.nestedscrolling.NestedScrollingParent2View xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <com.arise.demo.nestedscrolling.MutableRelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/holo_blue_bright"
        app:enableLinkedScroll="true"
        app:enableMove="true"
        app:maxHeight="120dp"
        app:minHeight="50dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="@string/head_title"
            android:textColor="@android:color/black"
            android:textSize="12dp" />
    </com.arise.demo.nestedscrolling.MutableRelativeLayout>

    <com.arise.demo.nestedscrolling.CustomRecyclerView
        android:id="@+id/nestedScrollingChild"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

</com.arise.demo.nestedscrolling.NestedScrollingParent2View>
