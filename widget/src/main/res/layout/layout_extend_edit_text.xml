<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <AutoCompleteTextView
        android:id="@+id/mEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#263340"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/firstIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/edit_text_clear"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/secondIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/firstIcon"
        android:layout_toStartOf="@id/firstIcon"
        android:paddingRight="5dp"
        android:src="@drawable/edit_text_show"
        android:visibility="visible" />

</merge>