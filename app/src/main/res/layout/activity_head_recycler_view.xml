<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aries.android.demo.headrecyclerview.HeadRecyclerViewActivity">

    <com.aries.sdk.recyclerview.LinkScrollParent
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.aries.sdk.recyclerview.head.StretchHead
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorPrimaryDark"/>

        <com.aries.android.demo.nestedscrolling.NestedScrollingChildView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.aries.sdk.recyclerview.LinkScrollParent>


</RelativeLayout>
