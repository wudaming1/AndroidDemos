<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="title_text_style">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/font_gary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="edit_item_style">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider_gary</item>
    </style>

</resources>
