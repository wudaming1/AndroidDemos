<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>


    <style name="title_text_style">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/font_gary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="edit_item_style">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/input_bg_selector</item>
        <item name="android:textColorHint">@color/font_gary_hint</item>
    </style>

    <style name="event_button_style">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/font_gary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/bg_shape_button</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider_gary</item>
    </style>

</resources>
